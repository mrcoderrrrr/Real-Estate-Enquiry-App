<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/datacardView"
        android:elevation="2dp"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Cust_Name"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/button_color"
            android:text="Name Of Person"
            android:textSize="15sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Cust_Name"
            android:text="Email Id"
            android:textSize="15sp"
            android:layout_marginEnd="20dp"
            android:id="@+id/Cust_Emailid"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            />
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Cust_Emailid"
                android:text="Phone No"
                android:textSize="15sp"
                android:layout_marginEnd="20dp"
                android:id="@+id/Cust_Phone"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Cust_Phone"
                android:layout_marginTop="10dp"
                android:paddingLeft="150dp"
                android:hint="Update Data"
                android:id="@+id/Cust_update"
                android:drawableStart="@drawable/ic_baseline_edit_note_24"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>